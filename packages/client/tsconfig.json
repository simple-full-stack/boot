{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "es6",
        "target": "es6",
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "lib": ["es7", "dom"],
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/**/*"
    ]
}
