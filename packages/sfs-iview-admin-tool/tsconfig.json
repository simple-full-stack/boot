{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "diagnostics": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveSymlinks": true,
        "pretty": true,
        "strict": true,
        "traceResolution": true,
        "version": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "target": "es6",
        "lib": [
            "es2015"
        ],
        "outDir": "./lib",
        "rootDir": "./src",
        "allowJs": true,
        "watch": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "bin"
    ]
}
