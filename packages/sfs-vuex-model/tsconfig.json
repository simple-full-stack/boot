{
    "compilerOptions": {
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "diagnostics": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveSymlinks": true,
        "pretty": true,
        "strict": true,
        "traceResolution": true,
        "version": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./lib",
        "rootDir": "./src",
        "watch": true,
        "declaration": true,
        "declarationDir": "./types"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "bin",
        "types"
    ]
}
