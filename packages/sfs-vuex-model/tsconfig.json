{
    "compilerOptions": {
        "moduleResolution": "node",
        "diagnostics": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "LF",
        "preserveSymlinks": true,
        "pretty": true,
        "strict": true,
        "traceResolution": true,
        "version": true,
        "experimentalDecorators": true,
        "module": "es2015",
        "target": "es6",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./lib",
        "rootDir": "./src",
        "watch": true,
        "declaration": true,
        "declarationDir": "./types",
        "jsx": "preserve"
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "bin",
        "types"
    ]
}
